<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="linuxdroid.mininix.sample.pathbroadcasts"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="linuxdroid.mininix.permission.APPEND_TO_PATH" />
    <!-- Declare this if you want to receive PATH prepend broadcasts -->
    <uses-permission android:name="linuxdroid.mininix.permission.PREPEND_TO_PATH" />

    <application android:label="@string/app_name" >
        <receiver android:name=".PathReceiver">
            <intent-filter>
                <action android:name="linuxdroid.mininix.broadcast.APPEND_TO_PATH" />
            </intent-filter>
            <intent-filter>
                <action android:name="linuxdroid.mininix.broadcast.PREPEND_TO_PATH" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
